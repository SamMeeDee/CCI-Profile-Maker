<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samd.cci_profile_maker.SelectAvatar">

    <TextView
        android:id="@+id/selectAvatarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="@string/selectAvatarTitle"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/girl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/selectAvatarTitle"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="29dp"
        android:onClick="buttonHandler"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        app:srcCompat="@drawable/avatar_f_1" />

    <ImageButton
        android:id="@+id/guy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/girl1"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:onClick="buttonHandler"
        android:padding="0dp"
        app:srcCompat="@drawable/avatar_m_1" />

    <ImageButton
        android:id="@+id/girl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/girl1"
        android:layout_alignStart="@+id/girl1"
        android:layout_below="@+id/girl1"
        android:layout_marginTop="19dp"
        android:onClick="buttonHandler"
        android:padding="0dp"
        app:srcCompat="@drawable/avatar_f_2" />

    <ImageButton
        android:id="@+id/girl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/girl2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/girl2"
        android:layout_marginBottom="23dp"
        android:onClick="buttonHandler"
        android:padding="0dp"
        app:srcCompat="@drawable/avatar_f_3" />

    <ImageButton
        android:id="@+id/guy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/guy1"
        android:layout_alignStart="@+id/guy1"
        android:layout_alignTop="@+id/girl2"
        android:onClick="buttonHandler"
        android:padding="0dp"
        app:srcCompat="@drawable/avatar_m_2" />

    <ImageButton
        android:id="@+id/guy3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/guy2"
        android:layout_alignStart="@+id/guy2"
        android:layout_alignTop="@+id/girl3"
        android:onClick="buttonHandler"
        android:padding="0dp"
        app:srcCompat="@drawable/avatar_m_3" />

</RelativeLayout>
